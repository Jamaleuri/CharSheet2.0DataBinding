                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF2E5E9E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                </Grid>
            </TabItem>
        </TabControl>
        <TextBox x:Name="ArmorClass" Grid.Column="6" Grid.RowSpan="3" Grid.Row="5" Foreground="White" FontSize="48" TextAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,0" Height="128" Text="{Binding ArmorClass}">
            <TextBox.Background>
                <ImageBrush ImageSource="/shield.png" Stretch="Uniform" TileMode="None"/>
            </TextBox.Background>
        </TextBox>
        <Image Grid.ColumnSpan="2" Grid.Column="8" Grid.RowSpan="2" Grid.Row="5" OpacityMask="#FF2A4FBF" Source="/background.jpg" Stretch="UniformToFill" Panel.ZIndex="-1" Opacity="0.50" />
        <TextBlock Grid.Column="8" HorizontalAlignment="Center" Grid.Row="5" TextWrapping="Wrap" Text="DS Successes" VerticalAlignment="Center" Width="128" Foreground="White" FontSize="20" FontFamily="Algerian"/>
        <CheckBox x:Name="DSSuccess1" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Left" Margin="3,0,3,0" Grid.Row="5" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSSucc[0]}"/>
        <CheckBox x:Name="DSSuccess2" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Center" Margin="3,0,3,0" Grid.Row="5" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSSucc[1]}"/>
        <CheckBox x:Name="DSSuccess3" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Right" Margin="3,0,3,0" Grid.Row="5" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSSucc[2]}"/>
        <TextBlock Grid.Column="8" HorizontalAlignment="Center" Grid.Row="6" TextWrapping="Wrap" Text="DS Fail" VerticalAlignment="Center" Width="128" Foreground="White" FontSize="20" TextAlignment="Center" FontFamily="Algerian"/>
        <CheckBox x:Name="DSFail1" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Left" Margin="3,0,0,0" Grid.Row="6" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSFails[0]}"/>
        <CheckBox x:Name="DSFail2" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSFails[1]}"/>
        <CheckBox x:Name="DSFail3" Grid.Column="9" Content="CheckBox" HorizontalAlignment="Right" Margin="3,0,3,0" Grid.Row="6" VerticalAlignment="Center" Width="15" IsChecked="{Binding DSFails[2]}"/>
        <Image Grid.ColumnSpan="2" Grid.Column="8" Grid.RowSpan="2" Grid.Row="8" OpacityMask="#FF2A4FBF" Source="/background.jpg" Stretch="UniformToFill" Panel.ZIndex="-1" Opacity="0.50" Margin="5,5,5,5" />
        <TextBlock  Grid.Column="8" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="8" TextWrapping="Wrap" Text="Hit Dice" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" FontFamily="Algerian" Foreground="White" Width="138"/>
        <TextBox x:Name="HitDice" Grid.Column="8" Grid.ColumnSpan="2" Margin="5,0,10,43" Grid.Row="9" TextWrapping="Wrap" Foreground="White" FontFamily="Algerian" FontSize="20" TextAlignment="Center" BorderThickness="0,0,0,1" Grid.RowSpan="2" Text="{Binding HitDice}">
            <TextBox.Background>
                <SolidColorBrush Color="#FF1E3B75" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <TextBlock Grid.Column="14" Grid.Row="2" TextWrapping="Wrap" Text="Speed" TextAlignment="Center" Foreground="AliceBlue" FontSize="18" FontFamily="Algerian" Margin="3,0,3,0">
            <TextBlock.Background>
                <SolidColorBrush Color="#FF1A2946" Opacity="0.6"/>
            </TextBlock.Background>

        </TextBlock>

        <Button x:Name="BtnInitiative" Content="Initiative" Grid.Column="15" Grid.Row="2" Foreground="White" FontFamily="Algerian" FontSize="18"  BorderBrush="#FF1A2A49" BorderThickness="1,1,1,1" Margin="1,0,0,0" Cursor="Hand">
            <Button.Background>
                <SolidColorBrush Color="#FF1A2946" Opacity="0.6"/>
            </Button.Background>
        </Button>

        <Button x:Name="BtnLoad" Grid.Column="13" Grid.ColumnSpan="2" Content="Load" Grid.Row="18" Margin="40, 0" FontFamily="Matura MT Script Capitals" Foreground="White" Cursor="Hand" FontSize="28">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF2E5E9E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="BtnSave" Grid.Column="15" Grid.ColumnSpan="2" Content="Save" Grid.Row="18" Margin="40,0,40,0" FontFamily="Matura MT Script Capitals" Foreground="White" Cursor="Hand" FontSize="28">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF2E5E9E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <CheckBox x:Name="CBInspiration" Content="" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="1" Panel.ZIndex="1" Grid.Row="11" Canvas.Left="13" Canvas.Top="114" Width="20" Background="White" Margin="6,0,0,0" IsChecked="{Binding Inspiration}">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <TextBlock Grid.Column="6" Grid.ColumnSpan="2" Grid.Row="10" Grid.RowSpan="2" TextWrapping="Wrap" Text="Inspired" TextAlignment="Center" Foreground="White" FontFamily="Algerian" FontSize="20" Margin="20,0,20,4">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF2E35A2" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</Window>
